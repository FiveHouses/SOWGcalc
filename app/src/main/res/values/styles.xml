<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton" parent="@android:style/Widget.Button">
	    <item name="android:gravity">center_vertical|center_horizontal</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:textSize">20dip</item>
	    <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">2dip</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_marginRight">2dip</item>
        <item name="android:onClick">buttonClickListener</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>
    <style name="LandscapeButton" parent="@style/CalcButton">
    	<item name="android:background">@drawable/landscape_button</item>
    </style>
    <style name="MButton" parent="@style/CalcButton">
    	<item name="android:background">@drawable/m_button</item>
    </style>
    <style name="ZeroButton" parent="@style/CalcButton">
    	<item name="android:background">@drawable/zero_button</item>
    </style>
    <style name="EqualsButton" parent="@style/CalcButton">
    	<item name="android:background">@drawable/equals_button</item>
    </style>
</resources>
